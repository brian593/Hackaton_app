<Page
    x:Class="Intercambio_App.View.NuevoArticulo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Intercambio_App.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Grid Height="100" Background="Chocolate" VerticalAlignment="Top" >
                <AppBarButton x:ConnectionId='7' Label="Regresar" Icon="Back"                   Foreground="White"/>

                <Image Stretch="UniformToFill" Source="ms-appx:///Assets/ElGarageIcon.png" MaxWidth="200" ></Image>

            </Grid>
            <Image x:ConnectionId='1' x:Name="CurrentImage" MaxHeight="200" MaxWidth="200"/>
                <TextBox x:ConnectionId='2' Name="Titulo" Text="Titulo de el producto"  Margin="5" MaxHeight="40" MinWidth="190"></TextBox>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <TextBox x:ConnectionId='4' Name="Descripcion" Text="descripción del producto" Margin="5" MaxHeight="100" MinWidth="190"></TextBox>
                <AppBarButton x:ConnectionId='5' Label="Photo" Icon="Camera" Name="ButtonCapture"                              />
                <AppBarButton x:ConnectionId='6' Label="Upload" Icon="Upload" Name="ButtonSave"                               />
            </StackPanel>
            
            <RadioButton x:ConnectionId='3' Content="Tecnologia" GroupName="Group1"                              />
            <RadioButton Content="Educacion" GroupName="Group1"/>
            <RadioButton Content="Ropa yCalzado" GroupName="Group1"/>
            <RadioButton Content="Belleza y Cuidado"  GroupName="Group1"/>
            <RadioButton Content="Servicios(Chauchas)"  GroupName="Group1"/>
        </StackPanel>
    </Grid>

</Page>

