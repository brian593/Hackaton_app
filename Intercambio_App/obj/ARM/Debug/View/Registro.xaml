<Page
    x:Class="Intercambio_App.View.Registro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Intercambio_App.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:ConnectionId='1' x:Name="LayoutRoot" Background="White">
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--Title-->
                <Grid Height="100" Background="Chocolate" VerticalAlignment="Top"  Grid.Row="0"  >
                    <Image Stretch="UniformToFill" Source="ms-appx:///Assets/ElGarageIcon.png" MaxWidth="200" ></Image>
                </Grid>
                <!--UserName-->
                <TextBlock x:ConnectionId='2' Grid.Row="1" x:Name="SubT" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Registro" Foreground="Black"></TextBlock>

                <TextBlock Text="UserName :" Grid.Row="2" Foreground="Black"   Margin="0,25,0,0"/>
                <TextBox x:ConnectionId='3' Name="TxtUserName" BorderBrush="LightGray" Grid.Row="2" Margin="100,0,10,0"                        />

                <!--Password-->
                <TextBlock Text="Password: " Grid.Row="4" Margin="0,25,0,0" Foreground="Black" />
                <PasswordBox x:ConnectionId='4' Name="TxtPwd" BorderBrush="LightGray" Grid.Row="4" Margin="100,0,10,0"                         />

                <!--Address-->
                <TextBlock Text="Address: " Grid.Row="3" Margin="0,25,0,0" Foreground="Black" />
                <TextBox x:ConnectionId='5' Name="TxtAddr" BorderBrush="LightGray" Grid.Row="3" Margin="100,0,10,0"                        />

                <!---->

                <!--Phone Number-->
                <TextBlock Text="Phone No: " Grid.Row="5" Margin="0,25,0,0" Foreground="Black" />
                <TextBox x:ConnectionId='6' Name="TxtPhNo" BorderBrush="LightGray" MaxLength="10" InputScope="Digits"  Grid.Row="5" Margin="100,0,10,0"                        />

                <!--Email-->
                <TextBlock Text="EmaiID: " Grid.Row="6" Margin="0,25,0,0" Foreground="Black" />
                <TextBox x:ConnectionId='7' Name="TxtEmail" BorderBrush="LightGray" Grid.Row="6" Margin="100,0,10,0"                        />

                <!--Submit Button-->
                <Button x:ConnectionId='8' BorderBrush="Transparent" Foreground="White"  Background="Chocolate" Content="Registrarme"  Name="BtnSubmit"                      HorizontalAlignment="Center" Grid.Row="7"/>

            </Grid>
        </Grid>

    </Grid>
</Page>

